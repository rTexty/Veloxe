# Конфигурация для внешнего доступа
# Скопируйте в .env и замените YOUR_SERVER_IP на реальный IP

# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
OPENAI_API_KEY=your_openai_api_key_here

# Security
ADMIN_SECRET=your_strong_admin_secret_here_use_64_chars

# Database (Production PostgreSQL)
DATABASE_URL=postgresql+asyncpg://veloxe:your_strong_password@localhost:5432/veloxe
POSTGRES_USER=veloxe
POSTGRES_PASSWORD=your_strong_postgres_password
POSTGRES_DB=veloxe

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Server Configuration - ВНЕШНИЙ ДОСТУП
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=info

# External Access Settings
EXTERNAL_IP=YOUR_SERVER_IP_HERE
REACT_APP_API_URL=http://YOUR_SERVER_IP_HERE:8000/api

# Production Settings
ENVIRONMENT=production
DEBUG=false
SENTRY_DSN=your_sentry_dsn_here_optional

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
MAX_CONCURRENT_USERS=1000