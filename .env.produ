# PRODUCTION ENVIRONMENT VARIABLES
# Copy this file to .env on production server and fill in your values

# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
OPENAI_API_KEY=your_openai_api_key_here

# Security
ADMIN_SECRET=your_strong_admin_secret_here_use_64_chars

# Database (Production PostgreSQL)
DATABASE_URL=postgresql+asyncpg://veloxe:your_strong_password@localhost:5432/veloxe
POSTGRES_USER=veloxe
POSTGRES_PASSWORD=your_strong_postgres_password
POSTGRES_DB=veloxe

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=info

# Production Settings
ENVIRONMENT=production
DEBUG=false
SENTRY_DSN=your_sentry_dsn_here_optional

# SSL/TLS (if using HTTPS)
USE_SSL=true
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
MAX_CONCURRENT_USERS=1000

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true